<div class="max-w-2xl p-8 rounded-xl mx-auto text-center my-16 bg-gray-50">
  <h1 class="text-black text-3xl">Password Application by RoG</h1>
  <% if current_user.present? %>
    <p>You are signed in as
      <strong class="underline"><%= current_user.username %></strong></p>
    <div class="my-3">
      <%= link_to "View members-only content",
      static_members_only_path,
      class: "bg-sky-500 text-white py-2 px-3 font-semibold" %>
      <%= link_to "Sign out",
      users.sign_out_path,
      class: "bg-red-500 text-white py-2 px-3 font-semibold" %>
    </div>
  <% else %>
    <p class="text-lg text-gray-600 my-4">Sign Up to access members only content</p>
    <div class="flex items-center space-x-3 justify-center">
      <%= link_to "Sign in",
      users.sign_in_path,
      class: "bg-sky-500 text-white py-2 px-3 font-semibold" %>
      <%= link_to "Sign Up",
      new_user_path,
      class: "bg-emerald-600 text-white py-2 px-3 font-semibold" %>
    </div>
  <% end %>
</div>
