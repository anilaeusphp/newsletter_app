<div class="max-w-2xl rounded-xl mx-auto text-center my-16 bg-gray-50 p-16">
  <h1 class="font-bold text-3xl mb-6">Sign In</h1>
  <%= form_with model: @session, url: send(Passwordless.mounted_as).sign_in_path, data: { turbo: 'false' } do |f| %>
    <% email_field_name = :"passwordless[#{@email_field}]" %>
    <%= text_field_tag email_field_name,
    params.fetch(email_field_name, nil),
    required: true,
    placeholder: "Enter your email",
    class: "block w-full px-3 py-2 " %>
    <%= f.submit I18n.t("passwordless.sessions.new.submit"),
             class:
               "mt-6 bg-sky-500 px-3 py-2 rounded-md text-sky-50 cursor-pointer" %>
  <% end %>
</div>
